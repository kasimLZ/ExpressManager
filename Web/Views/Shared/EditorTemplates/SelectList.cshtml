@model SelectList
@{
	var attributes = new RouteValueDictionary { { "class", "show-tick form-control"} };
	var metaData = Html.GetPropMetadata();
	if (HtmlHelper.ClientValidationEnabled && metaData.IsRequired)
	{
		attributes.Add("required", "");
	}
}
@Html.DropDownListFor(a => a, Model, attributes)
